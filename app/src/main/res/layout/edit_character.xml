<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/baseingresar"
    tools:context="com.app.mundo.oggies.MainActivity"
    android:orientation="vertical">


    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3" >

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:layout_gravity="center"
                        android:paddingRight="8dp"
                        android:paddingLeft="8dp"
                        android:gravity="center_vertical" >

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3">

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.2" />

                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:id="@+id/imageButtonSummer"
                                android:layout_weight="1"
                                android:background="@drawable/boton_verano_2"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp" />

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.2" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3">

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.2" />

                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:id="@+id/imageButtonAutumn"
                                android:layout_weight="1"
                                android:background="@drawable/boton_otono1"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp" />

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.2" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3">

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.2" />

                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:id="@+id/imageButtonWinter"
                                android:layout_weight="1"
                                android:background="@drawable/boton_invierno_1"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp" />

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.2" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3">

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.2" />

                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:id="@+id/imageButtonSpring"
                                android:layout_weight="1"
                                android:background="@drawable/boton_primavera_1"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp" />

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.2" />
                        </LinearLayout>

                    </LinearLayout>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3" >

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.9"
                    android:background="@drawable/cuadro1" >

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.07" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.6" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:id="@+id/base">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1.5"
                                android:id="@+id/relativeLayout"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:layout_alignParentBottom="true"
                                    android:layout_alignParentTop="false"
                                    android:layout_alignParentLeft="false"
                                    android:id="@+id/cuerpo"
                                    android:layout_alignParentEnd="false">

                                    <Space
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="0.8" />

                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1">

                                        <ImageView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_alignParentTop="false"
                                            android:layout_alignParentStart="false"
                                            android:layout_weight="1"
                                            android:layout_alignWithParentIfMissing="false"
                                            android:layout_centerHorizontal="true"
                                            android:id="@+id/body_select"
                                            android:contentDescription=""
                                            android:layout_alignParentBottom="true"
                                            android:visibility="visible"
                                            android:layout_gravity="center_horizontal" />
                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/cabeza"
                                    android:layout_alignParentTop="true"
                                    android:visibility="invisible">

                                    <ImageView
                                        android:layout_width="131dp"
                                        android:layout_height="210dp"
                                        android:id="@+id/head_select"
                                        android:layout_alignParentStart="false"
                                        android:baselineAlignBottom="false"
                                        android:layout_alignParentTop="false"
                                        android:background="@drawable/nina_base_cafe" />
                                </LinearLayout>

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentBottom="false"
                                    android:layout_alignBottom="@+id/cuerpo"
                                    android:id="@+id/accesorio"
                                    android:layout_alignParentEnd="false"
                                    android:layout_alignParentStart="false"
                                    android:layout_alignLeft="@+id/cuerpo"
                                    android:layout_alignParentLeft="true">

                                    <Space
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="4" />

                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1">

                                        <ImageView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:id="@+id/accesorie_select"
                                            android:layout_alignParentBottom="true"
                                            android:layout_alignParentTop="false"
                                            android:layout_alignParentStart="false"
                                            android:layout_weight="1"
                                            android:layout_alignParentEnd="false"
                                            android:layout_alignParentLeft="false"
                                            android:visibility="visible" />

                                        <Space
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1" />
                                    </LinearLayout>

                                </LinearLayout>

                            </RelativeLayout>

                        </LinearLayout>

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.6" />
                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.07" />
                </LinearLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.03" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8" >

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/cuadro2" >

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5" >

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.5" />

                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:id="@+id/buttonPreviousHead"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/boton_atras"
                                android:layout_alignParentEnd="false"
                                android:layout_alignParentStart="false"
                                android:adjustViewBounds="false"
                                android:baselineAlignBottom="false"
                                android:focusableInTouchMode="false"
                                android:layout_gravity="center_vertical|left"
                                android:layout_weight="0.5" />

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.5" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4" >

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.5" />

                            <ViewFlipper
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:id="@+id/id_flipper_head"
                                android:layout_weight="2" />

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.5" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5" >

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.5" />

                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:id="@+id/buttonNextHead"
                                android:layout_alignParentRight="true"
                                android:layout_alignWithParentIfMissing="false"
                                android:layout_centerVertical="true"
                                android:background="@drawable/boton_adelante"
                                android:outlineProvider="paddedBounds"
                                android:layout_gravity="center_vertical|right"
                                android:layout_weight="0.5"
                                android:baselineAlignBottom="false" />

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.5" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:background="@drawable/cuadro3" >

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5" >

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1" />

                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:id="@+id/buttonPreviousBody"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/boton_atras"
                                android:layout_alignParentEnd="false"
                                android:layout_alignParentStart="false"
                                android:adjustViewBounds="false"
                                android:baselineAlignBottom="false"
                                android:focusableInTouchMode="false"
                                android:layout_gravity="center_vertical|left"
                                android:layout_weight="0.5" />

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4" >

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.5" />

                            <ViewFlipper
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:id="@+id/id_flipper_body"
                                android:layout_weight="2" />

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.5" />

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5" >

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1" />

                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:id="@+id/buttonNextBody"
                                android:layout_alignParentRight="true"
                                android:layout_alignWithParentIfMissing="false"
                                android:layout_centerVertical="true"
                                android:background="@drawable/boton_adelante"
                                android:outlineProvider="paddedBounds"
                                android:layout_gravity="center_vertical|right"
                                android:layout_weight="0.5" />

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/cuadro4" >

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5" >

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.5" />

                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:id="@+id/buttonPreviousAccesoty"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/boton_atras"
                                android:layout_alignParentEnd="false"
                                android:layout_alignParentStart="false"
                                android:adjustViewBounds="false"
                                android:baselineAlignBottom="false"
                                android:focusableInTouchMode="false"
                                android:layout_gravity="center_vertical|left"
                                android:layout_weight="0.5" />

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.5" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4" >

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.5" />

                            <ViewFlipper
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:id="@+id/id_flipper_accesories"
                                android:layout_weight="2" />

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.5" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5" >

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.5" />

                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:id="@+id/buttonNextAccesory"
                                android:layout_alignParentRight="true"
                                android:layout_alignWithParentIfMissing="false"
                                android:layout_centerVertical="true"
                                android:background="@drawable/boton_adelante"
                                android:outlineProvider="paddedBounds"
                                android:layout_gravity="center_vertical|right"
                                android:layout_weight="0.5" />

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.5" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:layout_gravity="center"
                android:gravity="center" >

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4" />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imageButtonAccepted"
                    android:layout_weight="1"
                    android:background="@drawable/boton15"
                    android:layout_margin="0dp"
                    android:layout_gravity="left" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5" />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imageButtonCancel"
                    android:layout_weight="1"
                    android:background="@drawable/boton16"
                    android:layout_gravity="right"
                    android:layout_margin="0dp" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5" />
        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>
